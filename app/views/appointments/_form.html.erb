
<% if flash[:my_err] %>
    <% flash[:my_err].each do |err| %>
        Error Message: <%= err %><br>
    <% end %>
<% end %>

<%= bootstrap_form_for(@appointment, layout: :inline) do |f| %>
<div>
    <%= f.datetime_select :date, { ampm: true, order: [:day, :month, :year]} %><br>
    <br> 
    <%= f.collection_select :language_id, Language.all, :id, :prog_lang %><br>
    <br> 
    <%= f.collection_select :interviewer_id, Interviewer.all, :id, :name %><br>
    <br> 
    <%= f.number_field :difficulty  %><br>
    <br> 
    <%= f.collection_select :interview_type_id, InterviewType.all, :id, :interview_type %><br>
    <br> 
    <%= f.text_field :link %><br>
    <br> 
    <%= f.text_area :note %><br>
    <br> 
    <button type="submit" class="btn btn-primary mb-2">Create Appointment</button>
    <br> 

<% end %>
    </div>